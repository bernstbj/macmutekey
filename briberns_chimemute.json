{
    "title": "Support USB Mute key for Amazon Chime on macOS",
    "maintainers": ["briberns"],
    "homepage": "https://w.amazon.com/bin/view/Users/Briberns/MacMute/",
    "import_url": "karabiner://karabiner/assets/complex_modifications/import?url=https://w.amazon.com/bin/download/Users/Briberns/MacMute/WebHome/briberns_chimemute.json", 
    "rules": [
        {
            "description": "Remap USB mute key when Chime is frontmost",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "identifiers": [
                                {
                                    "product_id": 8447,
                                    "vendor_id": 1003
                                }
                            ],
                            "type": "device_if"
                        },
                        {
                            "bundle_identifiers": [
                                "^com\\.amazon\\.Amazon-Chime"
                            ],
                            "type": "frontmost_application_if"
                        }
                    ],
                    "from": {
                        "key_code": "y",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "y",
                            "modifiers": [
                                "left_command"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Remap USB mute key when Chime is not frontmost",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "identifiers": [
                                {
                                    "product_id": 8447,
                                    "vendor_id": 1003
                                }
                            ],
                            "type": "device_if"
                        },
                        {
                            "bundle_identifiers": [
                                "^com\\.amazon\\.Amazon-Chime"
                            ],
                            "type": "frontmost_application_unless"
                        }
                    ],
                    "from": {
                        "key_code": "y",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ]
                        }
                    },
                    "to": [
                        {
                            "shell_command": "/usr/bin/osascript ~/.config/karabiner/chimeMuteToggle.scpt"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
